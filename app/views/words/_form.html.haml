= simple_nested_form_for @word do |f|
  .form-inputs
    = f.input :content, input_html: { class: 'form-control' }
    = f.association :language, input_html: { class: 'form-control' }
    = f.fields_for :translations do |t|
      = t.input :content, input_html: { class: 'form-control' }
      = t.association :language, input_html: { class: 'form-control' }
      = t.link_to_remove('Remove this Translation')
    %p= f.link_to_add('Add a Translation', :translations)
  .form-actions
    = f.button :submit, class: 'btn btn-primary'